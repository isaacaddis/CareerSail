<!DOCTYPE html>
<html>
   <head>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="msapplication-tap-highlight" content="no">
      <meta name="description" content=" ">
      <title>Welcome: CareerSale</title>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css" media="screen" title="no title">
      <link href="http://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet" type="text/css">
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <meta name="msapplication-TileColor" content="#FFFFFF">
      <meta name="theme-color" content="lightBlue">
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link rel="shortcut icon" type="image/png" href="stylesheets/favicon.ico"/>
      <style media="screen">
      nav .nav-wrapper form, nav .nav-wrapper form .input-field{
      height: 100%;
      }
      </style>
   </head>
   <body>
      <!-- Fixed Navbar -->
      <div class="navbar-fixed">
         <nav class="blue lighten-1">
            <div class="nav-wrapper">
               <a href="" class="brand-logo left" id = "logo" style="padding-left:1em;">CareerSail</a>
               <ul id="nav-mobile" class ="right">
                  <li><a href="/about/">About</a></li>
                  <li><a href="/demo/" class = "btn">Demo</a></li>
               </ul>
            </div>
         </nav>
      </div>
      <!-- Hero -->
      <div class="valign-wrapper blue lighten-2" id = "hero" style = "height:100vh;">
         <div class="valign center-block">
            <h3 class = "white-text">Sail the Seas of</h3>
            <h3 class = "white-text light"><span id = "typed"></span></h3>
            <nav class="teal">
              <div class="nav-wrapper">
                <form id="mainForm">
                  <div class="input-field">
                    <input id="search" type="search" required>
                    <label for="search"><i class="material-icons"></i></label>
                  </div>
                </form>
              </div>
            </nav>
         </div>
      </div>
      <!-- Services
         Note: Refer to http://materializecss.com/icons.html
         -->


      <!-- Scripts -->
      <script type="text/javascript" src = "javascripts/jquery-3.1.0.min.js"></script>
      <script type="text/javascript" src = "javascripts/typed.js"></script>
      <script type="text/javascript" src = "javascripts/custom.js"></script>
      <script type="text/javascript">
      $(function(){
          $("#typed").typed({
              strings: ["Employment","Job Searching", "Ambition", "Achievement"],

              stringsElement: null,
              // typing speed
              typeSpeed: 0,
              // time before typing starts
              startDelay: 0,
              // backspacing speed
              backSpeed: 0,
              // time before backspacing
              backDelay: 1000,
              // loop
              loop: true,
              // false = infinite
              loopCount: false,
              // show cursor
              showCursor: true,
              // character for cursor
              cursorChar: "",
          });
          $('#mainForm').submit(function (evt) {
            console.log('super');
            evt.preventDefault();
            var searchString = $('#search').val();
            window.location = '/profile/' + encodeURIComponent(searchString);
            return false;
          });
      });
      </script>
   </body>
</html>
